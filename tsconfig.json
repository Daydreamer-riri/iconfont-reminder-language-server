{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017"],
    "rootDir": "src",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/spec"]
}
